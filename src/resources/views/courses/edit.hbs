<h2 class="mt-4">Cập nhật khóa học</h2>
<div class="mt-4">
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="row mb-3">
            <label for="name" class="col-sm-2 col-form-label">Tên khóa học</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
            </div>
        </div>
        <div class="row mb-3">
            <label for="description" class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="{{course.description}}" id="description" name="description">
            </div>
        </div>
        <div class="row mb-3">
            <label for="videoId" class="col-sm-2 col-form-label">Video ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
